													"        await api.addRate(user2.id,event.id,5);    \r",
													"        await api.addRate(user3.id,event.id,3);\r",
													"        \r",
													"        await api.publishParticipationRequest(event2.id, user3.id).id;\r",
													"        await api.publishParticipationRequest(event2.id, user4.id);\r",
													"        await api.publishParticipationRequest(event2.id, user5.id);\r",
													"\r",
													"        await api.addRate(user4.id,event2.id,-4);\r",
													"        await api.addRate(user5.id,event2.id,3);\r",
													"        await api.addRate(user3.id,event2.id,5);\r",
													"        await api.addRate(user4.id,event2.id,0);\r",
													"        await api.removeRate(user4.id,event2.id);\r",
													"    } catch(err) {\r",
													"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
													"    }\r",
													"};\r",
													"\r",
													"const interval = setInterval(() => {}, 1000);\r",
													"\r",
													"setTimeout(async () => \r",
													"    {\r",
													"        try {\r",
													"            // выполняем наш скрипт\r",
